---
import { team, type TeamMember } from '../../server/team'; 
---
<section class="bg-white dark:bg-gray-900">
    <div class="py-8 px-4 mx-auto max-w-screen-xl lg:text-right text-left lg:py-16">
        <h1 class="mb-1 text-lg font-bold tracking-tight leading-none text-blue-700 md:text-2xl lg:text-2xl dark:text-white">Meet the Team !</h1>    
        <h1 class="mb-5 lg:mb-12 text-4xl font-bold tracking-tight leading-none text-gray-900 md:text-5xl lg:text-6xl dark:text-white">Our Developer</h1> 
        <div class="grid grid-cols-1 lg:grid lg:grid-cols-3 gap-8">
            {team.map((member: TeamMember) => (
                <div class="team-card relative flex flex-col border-gray-200 border overflow-hidden rounded-2xl bg-white shadow-md">
                    <div class="relative w-full h-72">
                        <img
                        src={member.image}
                        alt={member.name}
                        class="w-full h-full object-cover"
                        />
                    </div>
                    <div class="p-5 text-start">
                        <h4 class="text-xl font-bold text-blue-gray-900">
                        {member.name}
                        </h4>
                        <p class="text-md mt-[2px] font-medium text-gray-400">
                        {member.role}
                        </p>
                        <p class="mt-2 text-md text-gray-700">
                        {member.description}
                        </p>
                    </div>
                    <div class="flex items-center p-6 gap-2">
                        {member.links.github && (
                        <a href={member.links.github} target="_blank">
                            <svg class="w-7 h-7 text-gray-800 cursor-pointer hover:bg-gray-100 p-[4.5px] rounded-xl" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="currentColor" viewBox="0 0 24 24">
                                <path fill-rule="evenodd" d="M12.006 2a9.847 9.847 0 0 0-6.484 2.44 10.32 10.32 0 0 0-3.393 6.17 10.48 10.48 0 0 0 1.317 6.955 10.045 10.045 0 0 0 5.4 4.418c.504.095.683-.223.683-.494 0-.245-.01-1.052-.014-1.908-2.78.62-3.366-1.21-3.366-1.21a2.711 2.711 0 0 0-1.11-1.5c-.907-.637.07-.621.07-.621.317.044.62.163.885.346.266.183.487.426.647.71.135.253.318.476.538.655a2.079 2.079 0 0 0 2.37.196c.045-.52.27-1.006.635-1.37-2.219-.259-4.554-1.138-4.554-5.07a4.022 4.022 0 0 1 1.031-2.75 3.77 3.77 0 0 1 .096-2.713s.839-.275 2.749 1.05a9.26 9.26 0 0 1 5.004 0c1.906-1.325 2.74-1.05 2.74-1.05.37.858.406 1.828.101 2.713a4.017 4.017 0 0 1 1.029 2.75c0 3.939-2.339 4.805-4.564 5.058a2.471 2.471 0 0 1 .679 1.897c0 1.372-.012 2.477-.012 2.814 0 .272.18.592.687.492a10.05 10.05 0 0 0 5.388-4.421 10.473 10.473 0 0 0 1.313-6.948 10.32 10.32 0 0 0-3.39-6.165A9.847 9.847 0 0 0 12.007 2Z" clip-rule="evenodd"/>
                            </svg>
                        </a>
                        )}
                        {member.links.linkedin && (
                        <a href={member.links.linkedin} target="_blank">
                            <svg class="w-7 h-7 text-gray-800 cursor-pointer hover:bg-gray-100 p-[4.5px] rounded-xl" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="currentColor" viewBox="0 0 24 24">
                                <path fill-rule="evenodd" d="M12.51 8.796v1.697a3.738 3.738 0 0 1 3.288-1.684c3.455 0 4.202 2.16 4.202 4.97V19.5h-3.2v-5.072c0-1.21-.244-2.766-2.128-2.766-1.827 0-2.139 1.317-2.139 2.676V19.5h-3.19V8.796h3.168ZM7.2 6.106a1.61 1.61 0 0 1-.988 1.483 1.595 1.595 0 0 1-1.743-.348A1.607 1.607 0 0 1 5.6 4.5a1.601 1.601 0 0 1 1.6 1.606Z" clip-rule="evenodd"/>
                                <path d="M7.2 8.809H4V19.5h3.2V8.809Z"/>
                            </svg>
                        </a>
                        )}
                        {member.links.website && (
                        <a href={member.links.website} target="_blank">
                            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-7 h-7 text-gray-800 cursor-pointer hover:bg-gray-100 p-[4.5px] rounded-xl">
                                <path stroke-linecap="round" stroke-linejoin="round" d="M12 21a9.004 9.004 0 0 0 8.716-6.747M12 21a9.004 9.004 0 0 1-8.716-6.747M12 21c2.485 0 4.5-4.03 4.5-9S14.485 3 12 3m0 18c-2.485 0-4.5-4.03-4.5-9S9.515 3 12 3m0 0a8.997 8.997 0 0 1 7.843 4.582M12 3a8.997 8.997 0 0 0-7.843 4.582m15.686 0A11.953 11.953 0 0 1 12 10.5c-2.998 0-5.74-1.1-7.843-2.918m15.686 0A8.959 8.959 0 0 1 21 12c0 .778-.099 1.533-.284 2.253m0 0A17.919 17.919 0 0 1 12 16.5c-3.162 0-6.133-.815-8.716-2.247m0 0A9.015 9.015 0 0 1 3 12c0-1.605.42-3.113 1.157-4.418" />
                            </svg>

                        </a>
                        )}
                    </div>
                    </div>
                ))}
        </div>
    </div>
</section>