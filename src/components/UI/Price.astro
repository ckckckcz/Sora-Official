---
import { formatPrice, formatFeatures } from "../../data/price";
import { prices } from "../../data/price";
import type { PriceData } from "../../models/price";
---

<div class="lg:grid lg:grid-cols-3 md:grid-cols-3 sm:grid sm:grid-cols-2 sm:space-y-0 md:grid sm:gap-6 space-y-8 md:space-y-0 lg:space-y-0">
    {prices.map((plan: PriceData) => (
        <div class="w-full p-4 bg-white border border-gray-200 rounded-2xl shadow sm:p-8 dark:bg-gray-800 dark:border-gray-700">
            <h5 class="mb-4 text-xl font-medium text-gray-500 dark:text-gray-400 text-left">{plan.name}</h5>
            <div class="flex items-baseline text-gray-900 dark:text-white">
                <span class="text-4xl font-bold">{formatPrice(plan)}</span>
                <span class="ms-1 text-xl font-medium text-gray-300">/project</span>
            </div>
            <ul role="list" class="space-y-5 my-7">
                {plan.features.map((feature: { description: string; included: boolean }) => (
                    <li class="flex items-center text-left">
                        <svg class="flex-shrink-0 w-4 h-4 text-blue-700 dark:text-blue-500" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 20 20">
                            <path d="M10 .5a9.5 9.5 0 1 0 9.5 9.5A9.51 9.51 0 0 0 10 .5Zm3.707 8.207-4 4a1 1 0 0 1-1.414 0l-2-2a1 1 0 0 1 1.414-1.414L9 10.586l3.293-3.293a1 1 0 0 1 1.414 1.414Z"/>
                        </svg>
                        <span class="text-base font-medium leading-tight text-gray-500 dark:text-gray-400 ms-3">{feature.description}</span>
                    </li>
                ))}
            </ul>
            <button type="button" class="text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-200 dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-900 font-medium rounded-xl text-md px-5 py-3 inline-flex justify-center w-full text-center">Choose plan</button>
        </div>
    ))}
</div>
