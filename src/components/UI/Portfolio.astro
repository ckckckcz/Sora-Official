---
import { projects } from '../../data/portfolio';
import Label from "../../components/UI/Label.astro"
---

<div class="grid grid-cols-1 md:grid md:grid-cols-2 lg:grid lg:grid-cols-4 gap-5">
    {projects.map((project, index) => (
        <div class="max-w-md mx-auto" data-key={index}>
            <img src={project.image} alt={`${project.title} Preview`} class="w-full rounded-md mb-4" />
            <div class="mb-2 mt-2">
                <Label label={project.label} />
            </div>
            <h2 class="text-xl font-bold">{project.title}</h2>
            <p class="mt-2 text-md text-gray-400 text-muted-foreground font-medium">{project.description}</p>
            <div class="mt-4 flex space-x-4">
                <a href={project.link} target="_blank" class="bg-blue-700 hover:bg-blue-800 justify-center items-center text-white px-4 gap-2 py-2 rounded-xl font-medium flex">
                    Live Preview
                    <svg class="w-5 h-5 text-white" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="currentColor" viewBox="0 0 24 24">
                        <path fill-rule="evenodd" d="M11.403 5H5a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2v-6.403a3.01 3.01 0 0 1-1.743-1.612l-3.025 3.025A3 3 0 1 1 9.99 9.768l3.025-3.025A3.01 3.01 0 0 1 11.403 5Z" clip-rule="evenodd"/>
                        <path fill-rule="evenodd" d="M13.232 4a1 1 0 0 1 1-1H20a1 1 0 0 1 1 1v5.768a1 1 0 1 1-2 0V6.414l-6.182 6.182a1 1 0 0 1-1.414-1.414L17.586 5h-3.354a1 1 0 0 1-1-1Z" clip-rule="evenodd"/>
                    </svg>
                </a>
            </div>
        </div>
    ))}
</div>
